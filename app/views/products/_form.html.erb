<%= simple_form_for product do |form| %>
 <% @product.errors.full_messages.each do |message| %>
     <li><%= message %></li>
     <% end %>

  <%= form.input :name%>

  <div class="field">
    <%= form.label :avatar %>
    <%= form.file_field :avatar %>
  </div>

  <div class="field">
    <%= form.label :product_category_id %>
    <%= form.collection_select :product_category_id, ProductCategory.order(:name), :id, :name, include_blank: false, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, Brand.order(:name), :id, :name, include_blank: false, prompt: true %>
  </div>

  <%= form.input :description %>
<p>
  <%= form.association :allergens, as: :check_boxes, wrapper: :vertical_collection_inline %>
  <%= form.association :ingredients, as: :check_boxes, wrapper: :vertical_collection_inline, collection: Ingredient.order(:name) %>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
