<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :product_category_id %>
    <%= form.collection_select :product_category_id, ProductCategory.order(:name), :id, :name, include_blank: false, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :brand_id %>
    <%= form.collection_select :brand_id, Brand.order(:name), :id, :name, include_blank: false, prompt: true %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description %>
  </div>

  <div class="field">
    <%= form.label :ingredients %>
    <%= form.collection_check_boxes :ingredient_ids, Ingredient.order(:name), :id, :name do |b|
      b.label(:"data-value" => b.value) { b.check_box + b.text }
    end %>
  </div>

  <div class="field">
    <%= form.label :allergens %>
    <%= form.collection_check_boxes :allergen_ids, Allergen.order(:name), :id, :name do |b|
      b.label(:"data-value" => b.value) { b.check_box + b.text }
    end %>
  </div>

  <div class="field">
    <%= form.label :ingredient_amount %>
    <%= form.text_field :ingredient_amount %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
